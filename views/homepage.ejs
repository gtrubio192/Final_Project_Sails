<body ng-app='app' class="blog-page">
  <nav class="navbar navbar-inverse navbar-center">
      <a class="navbar-brand navbar-center" href="#" ui-sref-active="active" ui-sref="home"><span>Home</span></a>
      <a class="navbar-brand navbar-center" href="#" ui-sref-active="active" ui-sref="about"><span>About</span></a>
      <a class="navbar-brand navbar-center" href="#" ui-sref-active="active" ui-sref="blog"><span>Blog</span></a> 
  </nav>
  
  <section ng-controller=PostCtrl> 
    <div class="navbar-header">
      <p ng-click="formShow = true" class="text-center">
        <i class="fa fa-plus-square-o fa-4x"></i>      
      </p>
    </div>
    <br>
    <br>
  
    <div ng-show="formShow" class="col-lg-8 col-md-8 col-sm-8 col-xs-12 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
      <div>
        <div>
          <textarea rows="4" cols="70" ng-model="caption" type="text" placeholder="type here..." ></textarea>
        </div>
      </div>
      <div>
        <div class="text-right">
          <button ng-click="postContent()" class="btn btn-success btn-lg">Post</button>
          <button ng-click="formShow = false"id="button2id" name="button2id" class="btn btn-lg btn-danger">Cancel</button>
        </div>
      </div>
    </div> 
  </section>
  
  <div ui-view>
    
  </div>
</body>
